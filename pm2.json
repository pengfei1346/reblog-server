{
  "name": "blog-server",
  "script": "./bin/www",
  "cwd":"./",
  "watch":[
    "controller",
    "database"
  ],
  "ignore_watch" : [
    "node_modules",
    "uploads"
  ],
  "watch_options": {
    "followSymlinks": false
  },
  "error_file": "./logs/err.log",
  "out_file": "./logs/out.log",
  "log_date_format": "YYYY-MM-DD HH:mm Z"
}
